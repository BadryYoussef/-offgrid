<Window x:Class="OffGrid.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="[ OFFGRID // SECURE MESH ]" 
        Height="700" Width="1100"
        WindowStartupLocation="CenterScreen"
        Background="#000000"
        Foreground="#00FF41"
        FontFamily="Consolas"
        Loaded="Window_Loaded"
        Closing="Window_Closing">

    <Window.Resources>
        <!-- Cyberpunk Terminal Styling -->
        <Style x:Key="TerminalBorder" TargetType="Border">
            <Setter Property="BorderBrush" Value="#00FF41"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="#000000"/>
            <Setter Property="CornerRadius" Value="0"/>
        </Style>

        <Style x:Key="TerminalButton" TargetType="Button">
            <Setter Property="Background" Value="#000000"/>
            <Setter Property="Foreground" Value="#00FF41"/>
            <Setter Property="BorderBrush" Value="#00FF41"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#00FF41"/>
                                <Setter Property="Foreground" Value="#000000"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#00CC33"/>
                                <Setter Property="Foreground" Value="#000000"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.4"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="TerminalCheckBox" TargetType="CheckBox">
            <Setter Property="Foreground" Value="#00FF41"/>
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <StackPanel Orientation="Horizontal">
                            <Border x:Name="CheckBorder" 
                                    Width="16" Height="16" 
                                    BorderBrush="#00FF41" 
                                    BorderThickness="1" 
                                    Background="#000000"
                                    Margin="0,0,8,0">
                                <TextBlock x:Name="CheckMark" 
                                           Text="█" 
                                           Foreground="#00FF41" 
                                           HorizontalAlignment="Center" 
                                           VerticalAlignment="Center"
                                           FontSize="10"
                                           Visibility="Collapsed"/>
                            </Border>
                            <ContentPresenter VerticalAlignment="Center"/>
                        </StackPanel>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="CheckMark" Property="Visibility" Value="Visible"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="CheckBorder" Property="Background" Value="#0a1f0a"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="TerminalTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="#000000"/>
            <Setter Property="Foreground" Value="#00FF41"/>
            <Setter Property="BorderBrush" Value="#00FF41"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="CaretBrush" Value="#00FF41"/>
            <Setter Property="Padding" Value="10,8"/>
        </Style>

        <Style x:Key="TerminalScrollViewer" TargetType="ScrollViewer">
            <Setter Property="Background" Value="#000000"/>
        </Style>

        <Style x:Key="TerminalListBox" TargetType="ListBox">
            <Setter Property="Background" Value="#000000"/>
            <Setter Property="BorderBrush" Value="#00FF41"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="#00FF41"/>
            <Setter Property="FontFamily" Value="Consolas"/>
        </Style>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="280"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- LEFT SIDEBAR: PAIRED DEVICES -->
        <Border Grid.Column="0" Style="{StaticResource TerminalBorder}" Margin="0,0,10,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <Border Grid.Row="0" BorderBrush="#00FF41" BorderThickness="0,0,0,1" Padding="10">
                    <StackPanel>
                        <TextBlock Text="╔══════════════════════╗" Foreground="#00FF41" FontFamily="Consolas" FontSize="12"/>
                        <TextBlock Text="║   PAIRED DEVICES     ║" Foreground="#00FF41" FontFamily="Consolas" FontSize="12"/>
                        <TextBlock Text="╚══════════════════════╝" Foreground="#00FF41" FontFamily="Consolas" FontSize="12"/>
                    </StackPanel>
                </Border>

                <!-- Device List -->
                <ScrollViewer Grid.Row="1" Style="{StaticResource TerminalScrollViewer}" VerticalScrollBarVisibility="Auto">
                    <ItemsControl x:Name="DeviceList" Padding="10">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <CheckBox Style="{StaticResource TerminalCheckBox}" 
                                          IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                          Content="{Binding DisplayName}"
                                          Margin="0,4"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>

                <!-- Status -->
                <Border Grid.Row="2" BorderBrush="#00FF41" BorderThickness="0,1,0,0" Padding="10,5">
                    <TextBlock x:Name="StatusText" Text="[STATUS] STANDBY" Foreground="#00FF41" FontFamily="Consolas" FontSize="11" TextWrapping="Wrap"/>
                </Border>

                <!-- Connect Button -->
                <StackPanel Grid.Row="3" Margin="10">
                    <Button x:Name="ConnectButton" 
                            Style="{StaticResource TerminalButton}" 
                            Content="[ CONNECT ]" 
                            Click="ConnectButton_Click"/>
                    <Button x:Name="RefreshButton" 
                            Style="{StaticResource TerminalButton}" 
                            Content="[ REFRESH ]" 
                            Click="RefreshButton_Click"
                            Margin="0,8,0,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- MAIN AREA: CHAT CONSOLE -->
        <Border Grid.Column="1" Style="{StaticResource TerminalBorder}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <Border Grid.Row="0" BorderBrush="#00FF41" BorderThickness="0,0,0,1" Padding="15,10">
                    <Grid>
                        <StackPanel HorizontalAlignment="Left">
                            <TextBlock Text="█▀█ █▀▀ █▀▀ █▀▀ █▀█ █ █▀▄" Foreground="#00FF41" FontFamily="Consolas" FontSize="12"/>
                            <TextBlock Text="█▄█ █▀  █▀  █ █ █▀▄ █ █▄▀" Foreground="#00FF41" FontFamily="Consolas" FontSize="12"/>
                        </StackPanel>
                        <TextBlock x:Name="ConnectionCount" 
                                   Text="[0 ACTIVE LINKS]" 
                                   Foreground="#00FF41" 
                                   FontFamily="Consolas" 
                                   FontSize="12"
                                   HorizontalAlignment="Right"
                                   VerticalAlignment="Center"/>
                    </Grid>
                </Border>

                <!-- Chat Log -->
                <ScrollViewer Grid.Row="1" 
                              x:Name="ChatScrollViewer"
                              Style="{StaticResource TerminalScrollViewer}" 
                              VerticalScrollBarVisibility="Auto"
                              Padding="15">
                    <TextBlock x:Name="ChatLog" 
                               Foreground="#00FF41" 
                               FontFamily="Consolas" 
                               FontSize="13"
                               TextWrapping="Wrap"
                               Text="[SYSTEM] OFFGRID v1.0 // BLUETOOTH MESH INITIALIZED&#x0a;[SYSTEM] Waiting for connections...&#x0a;"/>
                </ScrollViewer>

                <!-- Input Area -->
                <Border Grid.Row="2" BorderBrush="#00FF41" BorderThickness="0,1,0,0">
                    <StackPanel>
                        <!-- Typing Indicator -->
                        <TextBlock x:Name="TypingIndicator"
                                   Foreground="#00AA33"
                                   FontFamily="Consolas"
                                   FontSize="11"
                                   FontStyle="Italic"
                                   Margin="15,5,15,0"
                                   Visibility="Collapsed"/>
                    <Grid Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" 
                                   Text="►" 
                                   Foreground="#00FF41" 
                                   FontFamily="Consolas" 
                                   FontSize="16"
                                   VerticalAlignment="Center"
                                   Margin="0,0,10,0"/>

                        <TextBox Grid.Column="1" 
                                 x:Name="MessageInput" 
                                 Style="{StaticResource TerminalTextBox}"
                                 KeyDown="MessageInput_KeyDown"
                                 TextChanged="MessageInput_TextChanged"/>

                        <Button Grid.Column="2" 
                                Style="{StaticResource TerminalButton}" 
                                Content="SEND" 
                                Margin="10,0,0,0"
                                Click="SendButton_Click"/>
                        </Grid>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Window>
